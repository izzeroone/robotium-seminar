<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp" tools:ignore="MissingConstraints">
        <TimePicker android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/datePicker" ></TimePicker>
        <TextView
                android:text="Hello World2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20pt"
                android:id="@+id/textView"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>